<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:Equality.Controls"
                    xmlns:models="clr-namespace:Equality.Models">
    <Style TargetType="{x:Type local:ColumnControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ColumnControl}">
                    <Grid Width="350"
                          Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDragging, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                 Value="True">
                                        <Setter Property="Opacity"
                                                Value="0.5" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <TextBlock FontSize="24"
                                   Margin="10"
                                   Text="{Binding Path=Column.Name, RelativeSource={RelativeSource Mode=TemplatedParent}}" />

                        <DockPanel Grid.Row="1"
                                   LastChildFill="True"
                                   VerticalAlignment="Top">
                            <Button DockPanel.Dock="Bottom"
                                    Margin="10"
                                    Style="{StaticResource MaterialDesignPaperButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus"
                                                             Width="20"
                                                             Height="20"
                                                             VerticalAlignment="Center"
                                                             Foreground="#FFF96840" />
                                    <TextBlock FontSize="16"
                                               Foreground="#FFF96840"
                                               Text="Add Card" />
                                </StackPanel>
                            </Button>

                            <ListBox DockPanel.Dock="Top"
                                     ItemsSource="{Binding Column.Cards, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:Card}">
                                        <local:CardControl Card="{Binding}"
                                                           Margin="10" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Focusable"
                Value="False" />
    </Style>
</ResourceDictionary>
