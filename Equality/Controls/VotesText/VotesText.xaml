<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Equality.Controls"
                    xmlns:converters="clr-namespace:Equality.MVVM.Converters;assembly=Equality.MVVM">
    <Style TargetType="{x:Type controls:VotesText}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:VotesText}">
                    <TextBlock FontSize="16"
                               Margin="10"
                               Text="{TemplateBinding Votes, Converter={converters:PluralConverter}}"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"
                               Foreground="#7F000000" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Focusable"
                Value="False" />
    </Style>
</ResourceDictionary>