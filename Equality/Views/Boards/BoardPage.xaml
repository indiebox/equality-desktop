<mvvm:Page x:Class="Equality.Views.BoardPage"
           xmlns:mvvm="clr-namespace:Equality.MVVM"
           xmlns:catel="http://schemas.catelproject.com"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
           xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:vm="clr-namespace:Equality.ViewModels"
           xmlns:controls="clr-namespace:Equality.Controls"
           xmlns:models="clr-namespace:Equality.Models"
           xmlns:objects="clr-namespace:Equality.Data.Wpf"
           TextElement.Foreground="{DynamicResource MaterialDesignBody}"
           Background="{DynamicResource MaterialDesignPaper}"
           FontSize="16"
           d:DesignHeight="1080"
           d:DesignWidth="1920"
           d:DataContext="{d:DesignInstance Type=vm:BoardPageViewModel, IsDesignTimeCreatable=True}"
           mc:Ignorable="d">
    <Grid>
        <Canvas>
            <controls:ColumnControl Column="{Binding}"
                                    Margin="20,0"
                                    MouseMove="Card_MouseMove" />
        </Canvas>
        <StackPanel>
            <DockPanel LastChildFill="False">
                <Button Grid.Column="0"
                        Command="{Binding ToBoards}"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="10"
                        Cursor="Hand"
                        ToolTip="К доскам">
                    <materialDesign:PackIcon Foreground="#FFF96840"
                                             Kind="ArrowBack" />
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        DockPanel.Dock="Right"
                        Content="Модули"
                        Margin="10" />
            </DockPanel>
            <StackPanel Orientation="Horizontal">
                <ListBox x:Name="ListBoxColumns"
                         ItemsSource="{Binding Columns}"
                         MouseUp="ListBox_Drop">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:Column}">
                            <controls:ColumnControl Column="{Binding}"
                                                    Margin="20,0"
                                                    MouseMove="Card_MouseMove" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel VerticalAlignment="Top">
                    <Button Margin="10"
                            Style="{StaticResource MaterialDesignPaperButton}"
                            Command="{Binding DataContext.OpenCreateColumnWindow, RelativeSource={RelativeSource AncestorType=mvvm:Page}}"
                            Visibility="{Binding DataContext.CreateColumnVm, RelativeSource={RelativeSource AncestorType=mvvm:Page}, Converter={catel:ReferenceToCollapsingVisibilityConverter}, ConverterParameter=True}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus"
                                                     Width="20"
                                                     Height="20"
                                                     VerticalAlignment="Center"
                                                     Foreground="#FFF96840" />
                            <TextBlock FontSize="16"
                                       Foreground="#FFF96840">Добавить колонку</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ContentControl VerticalAlignment="Top"
                                Margin="10"
                                Focusable="False"
                                Content="{Binding DataContext.CreateColumnVm, RelativeSource={RelativeSource AncestorType=mvvm:Page}, Converter={catel:ViewModelToViewConverter}}" />


            </StackPanel>
        </StackPanel>
    </Grid>
</mvvm:Page>
