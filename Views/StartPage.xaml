<catel:UserControl x:Class="Equality.Views.StartPage"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:Equality.Views"
                   xmlns:dvm="clr-namespace:Equality.ViewModels.Design"
                   d:DesignHeight="600"
                   d:DesignWidth="900"
                   d:Background="{StaticResource MaterialDesignPaper}"
                   d:DataContext="{d:DesignInstance dvm:DesignStartPageViewModel, IsDesignTimeCreatable=True}"
                   mc:Ignorable="d">

    <TextBlock Grid.Row="0"
               Grid.Column="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="16"
               TextAlignment="Center">
        <Run>Hello, </Run>
        <Run Text="{Binding Name}" />
    </TextBlock>
</catel:UserControl>
