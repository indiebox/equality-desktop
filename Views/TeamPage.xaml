<catel:Page x:Class="Equality.Views.TeamPage"
            xmlns:catel="http://schemas.catelproject.com"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:Equality.Views"
            mc:Ignorable="d"
            xmlns:dvm="clr-namespace:Equality.ViewModels.Design"
            d:DesignHeight="450"
            d:DesignWidth="800"
            d:Background="{StaticResource MaterialDesignPaper}"
            d:DataContext="{d:DesignInstance dvm:DesignTeamPageViewModel, IsDesignTimeCreatable=True}"
            Title="TeamPage">
    <StackPanel>
        <StackPanel Margin="0,20,0,20">
            <Border CornerRadius="10,10,10,10"
                    Width="100"
                    Height="100">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill"
                                ImageSource="C:/Users/Marshall/Pictures/Photo.jpg" />
                </Border.Background>
            </Border>
            <TextBlock HorizontalAlignment="Center"
                       FontSize="27">Indie Box</TextBlock>
            <TextBlock HorizontalAlignment="Center"
                       FontSize="14"><Hyperlink NavigateUri="https://github.com/indiebox">https://github.com/indiebox</Hyperlink></TextBlock>
        </StackPanel>
        <TabControl Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                    BorderThickness="0"
                    BorderBrush="Transparent"
                    TabStripPlacement="Top"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                    materialDesign:ColorZoneAssist.Mode="Standard"
                    SnapsToDevicePixels="True">
            <TabItem Height="30">
                <TabItem.Header>
                    <StackPanel Height="auto"
                                Width="auto">
                        <TextBlock Text="All Files"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <TextBlock>
      <Run Text="tab 1 content. Default look and behaviors." />
      <LineBreak />
      <LineBreak />
      <Run FontStyle="Italic">
      Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...
    </Run>
                </TextBlock>
            </TabItem>
            <TabItem Height="30">
                <TabItem.Header>
                    <StackPanel Height="auto"
                                Width="auto">
                        <TextBlock Text="Recent"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <TextBlock>
      <Run Text="tab 2 content. Default look and behaviors." />
      <LineBreak />
      <LineBreak />
      <Run FontStyle="Italic">
      Praesent sed dui arcu. Vivamus porta auctor sagittis
    </Run>
                </TextBlock>
            </TabItem>
            <TabItem Height="30">
                <TabItem.Header>
                    <StackPanel Height="auto"
                                Width="auto">
                        <TextBlock Text="Photos"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <TextBlock>
      <Run Text="tab 3 content. Default look and behaviors." />
      <LineBreak />
      <LineBreak />
                </TextBlock>
            </TabItem>
            <TabItem Height="30">
                <TabItem.Header>
                    <StackPanel Height="auto"
                                Width="auto">
                        <TextBlock Text="Sounds"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <TextBlock>
      <Run Text="tab 4 content. Default look and behaviors." />
      <LineBreak />
      <LineBreak />
                </TextBlock>
            </TabItem>
        </TabControl>
    </StackPanel>
</catel:Page>
