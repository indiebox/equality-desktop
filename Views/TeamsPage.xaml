                        Margin="10">
                    <Border.Background>
                        <ImageBrush Stretch="UniformToFill"
                                    ImageSource="C:/Users/Marshall/Pictures/Logo.jpg" />
                    </Border.Background>
                </Border>
                <TextBlock FontSize="16"
                           TextAlignment="Center"
                           VerticalAlignment="Center">Indie Box</TextBlock>
