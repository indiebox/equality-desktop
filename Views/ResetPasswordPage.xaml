<catel:Page x:Class="Equality.Views.ResetPasswordPage"
            xmlns:catel="http://schemas.catelproject.com"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:dvm="clr-namespace:Equality.ViewModels.Design"
            d:DesignHeight="600"
            d:DesignWidth="900"
            d:Background="{StaticResource MaterialDesignPaper}"
            d:DataContext="{d:DesignInstance dvm:DesignResetPasswordPageViewModel, IsDesignTimeCreatable=True}"
            mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding OpenForgotPasswordPage}"
                    Grid.Column="0"
                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10">
                <materialDesign:PackIcon Kind="ArrowBack" />
            </Button>
            <StackPanel VerticalAlignment="Center"
                        Grid.Column="1">
                <StackPanel Width="350">
                    <TextBlock Grid.Row="0"
                               FontSize="27"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25"
                               Text="{Binding Title}" />
                    <TextBlock Margin="0,25,0,0"
                               Grid.Row="0"
                               FontSize="16"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Text="Код восстановления был отправлен на вашу почту. Он будет активен в течении X минут." />
                </StackPanel>

                <StackPanel Margin="0, 25, 0, 0"
                            HorizontalAlignment="Stretch">
                    <DockPanel LastChildFill="True"
                               Margin="10,0,10,0">
                        <Label DockPanel.Dock="Left"
                               Target="{Binding ElementName=Code}"
                               FontSize="16">_Код восстановления</Label>
                        <Button Style="{StaticResource LinkButton}"
                                FontSize="16"
                                DockPanel.Dock="Left"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                            Отправить повторно
                        </Button>

                    </DockPanel>

                    <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                             x:Name="Code"
                             AcceptsReturn="False"
                             materialDesign:HintAssist.Hint="Введите код восстановления"
                             materialDesign:HintAssist.IsFloating="False"
                             Margin="10,0,10,25"
                             FontSize="16" />

                    <Label Margin="10,0,10,0"
                           Target="{Binding ElementName=Password}"
                           FontSize="16">_Новый пароль</Label>
                    <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                             x:Name="Password"
                             AcceptsReturn="False"
                             materialDesign:HintAssist.Hint="Введите новый пароль"
                             materialDesign:HintAssist.IsFloating="False"
                             Margin="10,0,10,25"
                             FontSize="16" />
                    <Label Margin="10,0,10,0"
                           Target="{Binding ElementName=RepeatPassword}"
                           FontSize="16">_Повторите пароль
                    </Label>
                    <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                             x:Name="RepeatPassword"
                             AcceptsReturn="False"
                             materialDesign:HintAssist.Hint="Введите пароль ещё раз"
                             materialDesign:HintAssist.IsFloating="False"
                             Margin="10,0,10,25"
                             FontSize="16" />
                    <Button Command="{Binding OpenLoginPage}"
                            FontSize="16"
                            Content="Изменить"
                            Margin="10,0,10,10"
                            HorizontalAlignment="Right" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</catel:Page>